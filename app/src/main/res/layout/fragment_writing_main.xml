<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.writing.main.WritingMainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_style_title_01"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical|start"
            android:text="@string/text_title_monthly_writing" />

        <TextView
            android:id="@+id/tv_chat_main"
            style="@style/text_style_chat_received"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/background_text_chat_sent"
            android:overScrollMode="never"
            android:paddingVertical="24dp" />

        <TextView
            android:id="@+id/btn_closing_paper"
            style="@style/text_style_title_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="16dp"
            android:background="@drawable/background_brown_frame"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/text_closing_paper" />
    </LinearLayout>
</ScrollView>
