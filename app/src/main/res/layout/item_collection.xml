<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <LinearLayout
        android:id="@+id/container_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/collection_container_background"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/rl_text">

        <TextView
            android:id="@+id/tv_monthly_goal"
            style="@style/text_style_text_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:gravity="center"
            android:text="@string/text_open_monthly_goal"
            android:textColor="#FF232021" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF9EBDF" />

        <TextView
            android:id="@+id/tv_monthly_writing"
            style="@style/text_style_text_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="18dp"
            android:gravity="center"
            android:text="@string/text_open_monthly_writing"
            android:textColor="#FF232021" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_month"
            style="@style/text_style_title_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/collection_item_background_null"
            android:gravity="center"
            android:paddingVertical="18dp"
            android:textColor="#FF232021" />

        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_tag_new"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>